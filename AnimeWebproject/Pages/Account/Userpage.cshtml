@page
@model AnimeWebproject.Pages.Account.UserpageModel
@{ 

}
<div class="Userpage_container">
    <div class="card">
        <div class="card-body">
            <div class="User_info">
                <div class="image">
                    <img id="avatar" />
                </div>
                <div class="username">
                    <h3 id="username"></h3>
                </div>
                <div class="description">
                    <h6 id="description"></h6>
                </div>
                <div class="buttons">
                    <a href="/Account/Settings" class="btn btn-primary btn-sm"><i class="fas fa-cog"></i> Settings</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card" style="margin-top: 10px;">
        <div class="card-body">
            <h3>Favorites</h3>
            <h3>Recent Comments</h3>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $.ajax({
            type: "GET",
            url: "/api/Account/user",
            success: function (result) {
                $("#username").text(result.username);
                $("#description").text(result.description);
                $("#avatar").attr("src", "data:image/png;base64," + result.avatar);
            },
            error: function (result) {
                console.log(result);
                alert("error:" + result);
            },
            complete: function (result) {
            }
        });
    </script>
}